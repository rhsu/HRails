<p id="notice"><%= notice %></p>

<h1>Validation Fields</h1>

<table>
  <thead>
    <tr>
      <th>Entity type</th>
      <th>Version number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @validation_fields.each do |validation_field| %>
      <tr>
        <td><%= validation_field.entity_type %></td>
        <td><%= validation_field.version_number %></td>
        <td><%= link_to 'Show', validation_field %></td>
        <td><%= link_to 'Edit', edit_validation_field_path(validation_field) %></td>
        <td><%= link_to 'Destroy', validation_field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Validation Field', new_validation_field_path %>
